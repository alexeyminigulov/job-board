{% extends 'base.html.twig' %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h2 class="mt-4 mb-3">Настройки</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-9">
                <div class="user-info list-group">
                    <div class="user-info__block list-group-item">
                        <div class="row">
                            <div class="user-info__field col">
                                Name
                            </div>
                            <div class="user-info__record col">
                                {{ user.getUsername }}
                            </div>
                        </div>
                    </div>
                    <div class="user-info__block list-group-item">
                        <div class="row">
                            <div class="user-info__field col">
                                Email
                            </div>
                            <div class="user-info__record col">
                                {{ user.email }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">
                        Общие настройки
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">Настройки сотрудника</a>
                    <a href="#" class="list-group-item list-group-item-action">Настройки сотрудника</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}