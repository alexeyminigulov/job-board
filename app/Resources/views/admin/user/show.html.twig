{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="card border-dark mb-3 mt-4">
        <div class="card-header">
            <span class="font-weight-bold">About user</span>
        </div>
        <div class="card-body text-dark">
            <div class="px-lg-5">
                <div class="row mx-lg-n5 mb-2">
                    <div class="col-3 py-3 px-lg-5 border bg-light">User name</div>
                    <div class="col-9 py-3 px-lg-5 border">{{ user.username }}</div>
                </div>
                <div class="row mx-lg-n5 mb-2">
                    <div class="col-3 py-3 px-lg-5 border bg-light">User email</div>
                    <div class="col-9 py-3 px-lg-5 border">{{ user.email }}</div>
                </div>
                <div class="row mx-lg-n5 mb-2">
                    <div class="col-3 py-3 px-lg-5 border bg-light">Roles</div>
                    <div class="col-9 py-3 px-lg-5 border">{{ user.roles|join(', ') }}</div>
                </div>
            </div>

            <a class="btn btn-primary btn-lg mt-3" href="#" role="button">Edit</a>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
