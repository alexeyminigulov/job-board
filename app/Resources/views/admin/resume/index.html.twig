{% extends 'admin_base.html.twig' %}

{% block body %}
    <h2 class="mt-3">Resumes</h2>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">Is published</th>
            <th scope="col">Salary</th>
        </tr>
        </thead>
        <tbody>
        {% for resume in resumes %}
            <tr>
                <th scope="row">{{ resume.id }}</th>
                <td>{{ resume.name }}</td>
                <td>{{ resume.employee.user.username }}</td>
                <td>{{ resume.isPublished }}</td>
                <td>{{ resume.salary }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
{% endblock %}
